<%- include('../includes/head.ejs') %>
<link rel = "stylesheet" href = "/css/posts.css">
</head>


<body>
    <%- include('../includes/navigation.ejs') %>
    
    <main>
        <% if(posts.length > 0) { %>
            <div class = "postsList">
                <% for (let post of posts) { %>
                <div class = "postDisplay">
                    <a href = "/posts/<%= post._id %>"><img src = "<%= post.image %>" width="100%" height = "250px"></a>
                    
                    <div class = "titleHeader">
                       <h3><a href = "/posts/<%= post._id %>"><%= post.title %></h3></a>
                    </div>
                    
                    <div class = "overviewContent">
                        <span><a href = "/posts/<%= post._id %>"><%= post.overview %></a></span>
                    </div>

                    <div class = "dateContent">
                        <span><%= post.date %></span>
                    </div>
                    
                    
                </div>
                <% } %>
            </div>

        <% } else { %>
            
                <div class = "aboutusMain">
                    <h1>My Blog Is Empty! Add Some Content!</h1>
                    <div class = "contactContent">
                        <p>Click on the link below to add to to the blog
                        </p>
                       
                        <h2>Keep in mind when creating the new blog post, Since this is a work in progress, please upload an image by its image address. 
                        </h2>
                        <p>
                            Click here -> <a href = "/createPost">Add a Post</a>
                        </p>
                        
                    </div>
                </div>
            
        <% } %>    
    </main>
    

    <%- include('../includes/end.ejs') %>